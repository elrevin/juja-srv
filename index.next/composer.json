{
    "name": "index-next/in2",
    "description": "index.next CMS",
    "keywords": ["yii2", "framework", "yii2 CMS", "CMS", "index.art"],
    "homepage": "http://index-art.ru/",
    "type": "project",
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4.0",
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "yiisoft/yii2-twig": "*",
        "index-next/modules-installer": "*",
        "index-next/site": "*",
        "index-next/backend": "*",
        "index-next/files": "*"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "http://git.web-dev.ru/index-next/site.git"
        },
        {
            "type": "vcs",
            "url":  "http://git.web-dev.ru/index-next/backend.git"
        },
        {
            "type": "vcs",
            "url":  "http://git.web-dev.ru/index-next/files.git"
        },
        {
            "type": "vcs",
            "url":  "http://git.web-dev.ru/index-next/modules-installer.git"
        }
    ]
}