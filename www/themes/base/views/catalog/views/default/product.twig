{% extends '@themelayouts/inner.twig' %}
{% block content %}
    <div class="row">
        <div class="col-xs-12"><h1>{{ data.title }}</h1></div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-7">
            <img src="{{ data.image.getImageUrl(1000) }}" style="width: 100%">
        </div>
        <div class="col-xs-12 col-sm-6 col-md-5">
            <p class="text-success" style="font-size: 16px; font-weight: bold">{{ data.price|number_format(0, '', ' ') }} руб.</p>
            {% for item in data.goodsParams %}
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <td width="70%">{{ item.param.title }}</td>
                        <td>{{ item.value }}</td>
                    </tr>
                </tbody>
            </table>
            {% endfor %}
        </div>
    </div>
{% endblock %}